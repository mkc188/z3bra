mod4 + Return
 urxvt

mod4 + space
 export PATH="$PATH:~/b:."; thinglaunch

mod4 + w
 dwb

XF86Mail
 urxvt -e mail

Menu
 ~/bin/menu

mod4 + d
 ~/bin/popup $(date "+%A %D - %H:%M")

XF86Audio{Raise,Lower}Volume
 ~/bin/volume {+,-}; \
 ~/bin/popup $(volumebar)

XF86AudioMute
 ~/bin/volume !; \
 ~/bin/popup $(volumebar)

XF86Audio{Play,Stop,Prev,Next,Mute}
 mpc -h gavroche {toggle,stop,prev,next,pause}

control + XF86Audio{Raise,Lower}Volume
 mpc -h gavroche volume {+,-}10



## COMMANDS
chatnets = {
  # {{{
  fn = {
    type = "IRC";
    max_kicks = "1";
    max_msgs = "3";
    max_whois = "30";
    nick = "z3bra";
    autosendcmd = "/msg NickServ IDENTIFY password; /unquery NickServ";
  };
  bl = { type = "IRC"; };
  qn = {
    type = "IRC";
    max_kicks = "1";
    max_msgs = "3";
    max_whois = "30";
    nick = "z3bra";
    autosendcmd = "/msg Q@Cserve.quakenet.org AUTH z3bra passw0rd; /unquery Q@Cserve.quakenet.org";
  };
  uh = {
    type = "IRC";
    nick = "z3bra";
    autosendcmd = "/msg nickserv IDENTIFY z3bra password; /unquery nickserv";
  };
};
# }}}


# -- Application launchers ---------------------------------- {{{ --
 "urxvt"
 Mod4 + space
# 
 "dwb"
 Mod4 + w
# 
# ----------------------------------------------------------- }}} --

# -- Volume management -------------------------------------- {{{ --
"amixer set Master 5%+ unmute"
XF86AudioRaiseVolume

"amixer set Master 5%- unmute"
XF86AudioLowerVolume

"amixer set Master toggle"
XF86AudioMute
# ----------------------------------------------------------- }}} --

# -- mpc -h gavroche remote control ------------------------------------- {{{ --
"mpc -h gavroche toggle"
XF86AudioPlay

"mpc -h gavroche stop"
XF86AudioStop

"mpc -h gavroche prev"
XF86AudioPrev

"mpc -h gavroche next"
XF86AudioNext

"mpc -h gavroche volume +10"
control + XF86AudioRaiseVolume

"mpc -h gavroche volume -10"
control + XF86AudioLowerVolume

"mpc -h gavroche pause"
XF86AudioMute
# ----------------------------------------------------------- }}} --

# -- Desktop control ---------------------------------------- {{{ --
"slock"
control + mod1 + l
# ----------------------------------------------------------- }}} --

